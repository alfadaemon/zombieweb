= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question
    = f.text_field :question
  .field
    = f.label :level
    = f.collection_select :level_id, Level.order(:name),:id,:name, include_blank: true
  .field
    = f.label :category
    = f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: true
  .actions
    = f.submit 'Save', {:class=>'button'}



